<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="Setting"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <RelativeLayout
        android:layout_width="370dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/display"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:text="Display Mode and Time"
            android:textAllCaps="false"
            android:gravity="left|center_vertical"
            android:textSize="24sp"
            android:layout_alignRight="@+id/settingarrow"
            android:background="@null"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/rightarrowsetting"
            android:scaleType="fitXY"
            android:id="@+id/settingarrow" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="370dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/viewShare"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:text="View and Share Option"
            android:textAllCaps="false"
            android:gravity="left|center_vertical"
            android:textSize="24sp"
            android:layout_alignRight="@+id/settingarrow2"
            android:background="@null"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/rightarrowsetting"
            android:scaleType="fitXY"
            android:id="@+id/settingarrow2" />
    </RelativeLayout>

</LinearLayout>
