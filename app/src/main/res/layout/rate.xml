        <RadioButton
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day"
            android:buttonTint="@android:color/holo_blue_light"/>

        <RadioButton
            android:id="@+id/week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Week"
            android:buttonTint="@android:color/holo_blue_light"/>
    </RadioGroup>

</LinearLayout>